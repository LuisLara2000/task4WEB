@model UsersCreateAccountModel
@{
    ViewData["Title"] = "";
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/CreateAccount.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/task4Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="con">
    <div class="card">
            <h1>THE TASK 4</h1>
            <h3>- CREATE USER - </h3>
            <label></label>
            <form asp-action="CreateUser" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input asp-for="userName" class="form-control" type="text" id="name" placeholder="Enter your name">
                </div>

                <div class="form-group">
                    <label for="email">E-mail  <span asp-validation-for="email" class="text-danger"></span></label>
                    <input asp-for="email" class="form-control" type="email" id="email" placeholder="Enter your email">
                   
                </div>

                <div class="form-group">
                    <label for="password">Password <span asp-validation-for="hashPassword" class="text-danger"></span></label>
                    <input asp-for="hashPassword" class="form-control" type="password" id="password" placeholder="Enter your password">
                    
                </div>

                <div>
                    <button type="submit" class="btn btn-success w-100">
                        Create!
                    </button>
                </div>
            </form>

        <div class="login-text">
             <a asp-controller="App" asp-action="LogIn">You have an account already? Log In</a>
        </div>
    </div>
            
</div>


</body>
